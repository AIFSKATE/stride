<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <StrideRuntime>true</StrideRuntime>
  </PropertyGroup>

  <Import Project="..\..\..\targets\Stride.props" />

  <PropertyGroup>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <StrideAssemblyProcessor>true</StrideAssemblyProcessor>
    <StrideAssemblyProcessorOptions>--serialization --parameter-key</StrideAssemblyProcessorOptions>
    <StrideBuildTags>*</StrideBuildTags>
    <StrideCodeAnalysis>true</StrideCodeAnalysis>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Stride.Engine\Stride.Engine.csproj" />
    <ProjectReference Include="..\..\Stride.Physics\Stride.Physics.csproj" /><!--For precomputed hulls-->
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="BepuPhysics" />
  </ItemGroup>

  <Import Project="$(StrideSdkTargets)" />
</Project>
