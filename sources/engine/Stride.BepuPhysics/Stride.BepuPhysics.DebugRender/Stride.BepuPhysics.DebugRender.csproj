<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <StrideRuntime>true</StrideRuntime>
  </PropertyGroup>
  <Import Project="..\..\..\targets\Stride.props" />

  <PropertyGroup>
    <ImplicitUsings>enable</ImplicitUsings>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Nullable>enable</Nullable>
    <StrideAssemblyProcessor>true</StrideAssemblyProcessor>
    <StrideAssemblyProcessorOptions>--serialization --parameter-key</StrideAssemblyProcessorOptions>
    <StrideBuildTags>*</StrideBuildTags>
    <StrideCodeAnalysis>true</StrideCodeAnalysis>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Stride.Engine\Stride.Engine.csproj" />
    <ProjectReference Include="..\Stride.BepuPhysics._2D\Stride.BepuPhysics._2D.csproj" />
    <ProjectReference Include="..\Stride.BepuPhysics\Stride.BepuPhysics.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Effects\SinglePassWireframeShader.sdsl">
      <Generator>StrideShaderKeyGenerator</Generator>
    </None>
  </ItemGroup>
  <Import Project="$(StrideSdkTargets)" />
</Project>
